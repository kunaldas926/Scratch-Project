<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="search2RowModel" type="com.application.app.modules.search1.data.model.Search2RowModel"/>
    </data>
    <FrameLayout android:id="@+id/frame"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" style="@style/groupStyle">
        <LinearLayout android:id="@+id/linear"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyle">
            <FrameLayout android:id="@+id/frame1"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" style="@style/groupStyle">
                <ImageView android:id="@+id/image"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_133px"
                    android:layout_width="@dimen/_99px"
                    android:scaleType="centerCrop"
                    cornerRadius="@{@dimen/_2px}" imageRes="@{@drawable/img_cardbox_2}"/>
            </FrameLayout>
            <LinearLayout android:id="@+id/linear1"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2px"
                android:layout_marginTop="@dimen/_12px"
                android:layout_width="wrap_content"
                android:orientation="horizontal" style="@style/groupStyle">
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/blue_50"
                    android:progressTint="@color/yellow_700"
                    android:rating="4" style="@style/Widget.AppCompat.RatingBar.Small"/>
            </LinearLayout>
            <TextView android:gravity="top|start"
                android:id="@+id/txtGhostWriter"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2px"
                android:layout_width="match_parent"
                android:text="@{search2RowModel.txtGhostWriter}" style="@style/textStyleRobotoregular12"/>
        </LinearLayout>
    </FrameLayout>
</layout>
